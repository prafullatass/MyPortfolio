@model IEnumerable<MyPortfolio.Models.Stock>

@{
    ViewData["Title"] = "Index";
}

<h1>Stock List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead class="listHeader">
        <tr>
            <th>
                @Html.ActionLink(@Html.DisplayNameFor(model => model.Name), "Index", new { _orderBy = "Name", _sortDirection = ViewData["NameDirection"] })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ticker)
            </th>
            <th>
                @Html.ActionLink(@Html.DisplayNameFor(model => model.Country), "Index", new { _orderBy = "Country", _sortDirection = ViewData["CountryDirection"] })
            </th>
            <th>
                @Html.ActionLink(@Html.DisplayNameFor(model => model.Sector), "Index", new { _orderBy = "Sector", _sortDirection = ViewData["SectorDirection"] })
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ticker)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sector.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StockId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StockId"> Get Details</a> 
                @*<a asp-action="Delete" asp-route-id="@item.StockId">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
