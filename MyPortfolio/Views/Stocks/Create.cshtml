@model MyPortfolio.Models.Stock

@{
    ViewData["Title"] = "Create";
}
<link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">

<h1>Create</h1>

<h4>Stock</h4>
<hr />

@*if(@ViewBag.CountryMsg != null)
    alert("sfsf");*@

@*buttons that popup modals*@
<div>
    <button id="btnShowModal" type="button"
            class="btn btn-sm btn-default pull-left col-lg-11 button button4 btn-info" style="width:140px;">
        New Country
    </button>
    <button id="btnShowModalSector" type="button"
            class="btn btn-sm btn-default pull-left col-lg-11 button button4 btn-info" style="width:140px;">
        New Sector
    </button>
</div>


@*modal for popup to add new country*@
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="modal fade" tabindex="-1" id="loginModal"
                 data-keyboard="false" data-backdrop="static">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">New Country</h4>
                        </div>
                        <form action="/Countries/MakeACountry" method="POST" class="form " >
                            <div class="modal-body">
                                <label>New Country :</label>
                                <input  class="form-control" placeholder="New Country Name"
                                       type="text" name="CountryName" />
                                <br/>
                                <label>Currency :</label>
                                <input  class="form-control" placeholder="Country Currency "
                                       type="text" name="Currency" />
                                <br/>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary button button4">
                                    Submit
                                </button>
                                <button type="button" id="btnHideModal" class="btn btn-danger button button4">
                                    Cancel
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<hr/>
<br />

@*modal for Sector*@
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="modal fade" tabindex="-1" id="sectorModal"
                 data-keyboard="false" data-backdrop="static">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">New Sector </h4>
                        </div>
                        <form action="/Sectors/Create" method="POST" class="form-inline">
                            <div class="modal-body">
                                Sector Name :
                                <input class="form-control" placeholder="New Sector Name"
                                       type="text" name="SectorName" />
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary button button4">
                                    Submit
                                </button>
                                <button type="button" id="btnHideModalSector" class="btn btn-danger button button4">
                                    Cancel
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-inline row">
                <label asp-for="Country.Name" class="control-label col-5 justify-content-start"></label>
                <select asp-for="CountryId" class="form-control col-auto" asp-items="ViewBag.CountryId">
                    <option value="null"> Choose Country ---- </option>
                </select>
            </div>
            <div class="form-group form-inline row">
                <label asp-for="Sector.Name" class="control-label col-5 justify-content-start"></label>
                <select asp-for="SectorId" class="form-control col-6" asp-items="ViewBag.SectorId">
                    <option value="null"> Choose Sector ---- </option>
                </select>
            </div>
            <div class="form-group form-inline row">
                <label class="control-label col-5 justify-content-start">Stock Name </label>
                <input asp-for="Name" class="form-control  col-6" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-inline row">
                <label asp-for="Ticker" class="control-label col-5 justify-content-start"></label>
                <input asp-for="Ticker" class="form-control col-6" />
                <span asp-validation-for="Ticker" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">

</script>
<script src="bootstrap/js/bootstrap.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        $("#btnShowModal").click(function () {
            $("#loginModal").modal('show');
        });

        $("#btnHideModal").click(function () {
            $("#loginModal").modal('hide');
        });
    });
</script>


<script type="text/javascript">

    $(document).ready(function () {
        $("#btnShowModalSector").click(function () {
            $("#sectorModal").modal('show');
        });

        $("#btnHideModalSector").click(function () {
            $("#sectorModal").modal('hide');
        });
    });
</script>

