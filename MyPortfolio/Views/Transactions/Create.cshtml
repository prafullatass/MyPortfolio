@model MyPortfolio.Models.Transaction

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row ">
                <label class="control-label col-5"> Agency Name </label>
                <select asp-for="UserAgencyId" class="form-control col" asp-items="ViewBag.UserAgencyId">
                    <option value=null>Choose Agency</option>
                </select>
            </div>
            <div class="form-group row">
                <label class="control-label col-5"> Stock Name</label>
                <select asp-for="StockId" class="form-control col" asp-items="ViewBag.StockId" , id="StockId">
                    <option value=null>Choose stock</option>
                </select>
            </div>
            <div class="form-group form-check row border">
                Action :
                <label class="form-check-label col-5  text-primary">
                    @Html.RadioButtonFor(model => model.BuyOrSell, true) Buy
                </label>
                <label class="form-check-label  text-danger">
                    @Html.RadioButtonFor(model => model.BuyOrSell, false) Sell
                </label>
            </div>
            <div class="form-group row">
                <label asp-for="Date" class="control-label col-5"></label>
                <input asp-for="Date" class="form-control col" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Qty" class="control-label col-5"></label>
                <input asp-for="Qty" class="form-control col" />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Rate" class="control-label col-5"></label>
                <input asp-for="Rate" class="form-control col" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            @if (ViewBag.Message != null)
            {
                <script type="text/javascript">
                    window.onload = function() {
                        alert("@ViewBag.Message");
                    }
                </script>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_TransactionsPartial");}
}
