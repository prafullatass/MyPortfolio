@model MyPortfolio.Models.AgenciesViewModel.NewAgency

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>UserAgency</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Agency.CountryId" class="control-label"></label>
                <select asp-for="Agency.CountryId" class="form-control" asp-items="ViewBag.CountryId">
                    <option value="null">Select a country------------</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Agency.AgencyId" class="control-label"></label>
                <select asp-for="Agency.AgencyId" class="form-control" asp-items="ViewBag.AgencyId" id="Agencies">
                    <option value="null">Select Agency-----------</option>
                </select>
            </div>
            <input asp-for="UserAgency.UserId" type="hidden" />
            <div class="form-group">
                <label asp-for="UserAgency.AccountNo" class="control-label"></label>
                <input asp-for="UserAgency.AccountNo" class="form-control" />
                <span asp-validation-for="UserAgency.AccountNo" class="text-danger"></span>
            </div>
            <input asp-for="UserAgency.UserId" type ="hidden"/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
