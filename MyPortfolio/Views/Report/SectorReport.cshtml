
@model IEnumerable<MyPortfolio.Models.Sector>


@{
    ViewData["Title"] = "Sector Report";
}
<h1>Sector Report</h1>
<h5 class="font-weight-light font-italic"> Date : @DateTime.Now</h5>

<table class="table table-bordered">
    <thead class="listHeader">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalValue)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.TotalValue != 0)
            {
                <tr>
                    <td style="width : 250px;">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-right font-weight-bold" style="width : 250px;">
                        @String.Format("{0:0.00}", item.TotalValue)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
